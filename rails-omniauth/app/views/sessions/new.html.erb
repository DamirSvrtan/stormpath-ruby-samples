<h1>Sign in</h1>

<%= form_for(:sessions, url: "/auth/stormpath/callback") do |f| %>
  <div class="field">
    <%= label_tag :email_or_username %><br />
    <%= f.text_field :email_or_username %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in" %>
  </div>
<% end %>

