<h1>Create account</h1>

<form action="/account" method="POST">
  <input type="text" name="given_name" value="<%= account.given_name %>" placeholder="First name">
  <input type="text" name="surname" value="<%= account.surname %>" placeholder="Last name">
  <input type="text" name="email" value="<%= account.email %>" placeholder="Email address">
  <input type="text" name="username" value="<%= account.username %>" placeholder="Username">
  <input type="password" name="password">

  <input type="submit" value="Save">
</form>
