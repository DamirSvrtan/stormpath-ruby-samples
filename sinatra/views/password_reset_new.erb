<h1>Password Reset</h1>

<form class="form-horizontal" action="/password_reset" method="post">
  <div class="control-group">
    <label class="control-label" for="email_or_username">Email or Username</label>
    <div class="controls">
      <input type="text" name="email_or_username" id="email_or_username" placeholder="Email or Username">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <input class="btn-primary btn" type="submit" value="Send Password Reset Email">
    </div>
  </div>
</form>
