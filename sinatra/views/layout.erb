<html>
  <head>
  </head>
  <body>
    <% if defined? flash %>
      <div class="alert"><%= flash[:message] %></div>
    <% end %>
    <%= yield %>
    <% if defined? session and session[:authenticated] %>
      <form method="post" action="/session">
        <input type="submit" value="log out">
        <input type="hidden" value="DELETE" name="_method">
      </form>
    <% end %>
  </body>
</html>
