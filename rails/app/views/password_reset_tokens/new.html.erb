<h1>Password Reset</h1>

<%= form_tag request_password_token_path, method: 'post', class: 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag :email, nil, class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :email %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= button_tag 'Send Password Reset Email', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
