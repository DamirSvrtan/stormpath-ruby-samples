<!DOCTYPE html>
<html>
  <head>
    <title>Stormpath Rails Sample</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body style="background: <%= if logged_in? then current_user.css_background end %>";>
    <div class="navbar">
      <div class="navbar-inner">
        <%= link_to brand_header_title, root_path, class: :brand %>
        <% if logged_in? %>
          <%= link_to "Account Stores", account_store_mappings_path, class: :brand %>
          <%= link_to "Log out | #{current_user.username}", session_path, method: :delete, class: "btn logout" %>
        <% end %>
      </div>
    </div>
    <% if flash[:message] %>
      <div class="alert"><%= flash[:message] %></div>
    <% end %>
    <div class="page-content">
      <%= yield %>
    </div>
  </body>
</html>
