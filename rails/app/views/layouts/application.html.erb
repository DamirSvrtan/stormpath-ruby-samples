<!DOCTYPE html>
<html>
  <head>
    <title>Stormpath Rails Sample</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/stormpath.css">
  </head>
  <body style="background: <%= if logged_in? then current_user.css_background end %>";>
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="/">Stormpath <%= if logged_in? then ">> #{current_user.username}" end %></a>
        <% if session[:user_id] %>
          <%= link_to "Log out", session_path, method: :delete, class: "btn logout" %>
        <% end %>
      </div>
    </div>
    <% if flash[:message] %>
      <div class="alert"><%= flash[:message] %></div>
    <% end %>
    <div class="page-content">
      <%= yield %>
    </div>
  </body>
</html>
