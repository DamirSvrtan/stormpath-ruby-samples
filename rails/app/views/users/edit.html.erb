<h1>Edit Account</h1>

<h4> User Info </h4>
<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
  <div class="control-group">
    <%= label_tag :given_name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :given_name, :placeholder => 'Given Name' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :surname, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :surname, :placeholder => 'Surname' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :email, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :placeholder => 'Email' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :username, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :placeholder => 'Username' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :css_background, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :css_background, :placeholder => 'CSS Background Color' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<h4>User belongs to <%= pluralize(@user_groups.count, 'group') %></h4>
<table class="table">
  <thead>
    <tr>
      <th>Group Name</th>
    </tr>
  </thead>
  <tbody>
  <% @user_groups.each do |user_group| %>
    <tr>
      <td><%= user_group.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
